<launch>
    <!-- <param name="/use_sim_time" value="true"/> -->
    <param name="use_sim_time" value="true"/>
    <!-- map -->
    <!-- <node name="map_to_beacon" pkg="tf2_ros" type="static_transform_publisher" args="0 0 0 0 0 0 1 map beacon_map"/>
    <node name="beacon_server" pkg="map_server" type="map_server" args="$(find eurobot)/maps/beacon.yaml" output="screen">
        <remap from="map" to="beacon_map"/>
        <remap from="map_metadata" to="beacon_map_metadata"/>
    </node> -->

    <!-- stage -->
    <node pkg="stage_ros" type="stageros" name="stageros" args="$(find stage_simulation)/stage/mapf_experiment.world" output="screen">
        <remap from="/robot_0/base_scan" to="/robot_0/scan"/>
        <remap from="/robot_1/base_scan" to="/robot_1/scan"/>
    </node>

    <!-- rviz -->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find stage_simulation)/rviz/stage_dual_robot.rviz" />

    <group ns="robot_0">
        <param name="initial_x" type="double" value="2.0"/>
		<param name="initial_y" type="double" value="4.5"/>
		<param name="initial_theta" type="double" value="-90.0"/>
		<param name="robot_name" value="robot_0" />

        <node pkg="stage_simulation" type="ground_truth.py" name="pub_ground_truth" output="screen"/>
        
        <!-- localization -->
        <include file="$(find eurobot_localization)/launch/ekf_stage.launch">
            <arg name="config_name" value="ekf_stage_mapf.yaml"/>
        </include>

        <!-- Obstacle detector -->
        <include file="$(find obstacle_detector)/launch/eurobot_beacon.launch">
            <arg name="robot_name" value="robot_0"/>
        </include>
    </group>

    <group ns="robot_1">
        <param name="initial_x" type="double" value="2.0"/>
		<param name="initial_y" type="double" value="0.5"/>
		<param name="initial_theta" type="double" value="90.0"/>
		<param name="robot_name" value="robot_1" />

        <node pkg="stage_simulation" type="ground_truth.py" name="pub_ground_truth" output="screen"/>
        
        <!-- localization -->
        <include file="$(find eurobot_localization)/launch/ekf_stage.launch">
            <arg name="config_name" value="ekf_stage_mapf.yaml"/>
        </include>

        <!-- Obstacle detector -->
        <include file="$(find obstacle_detector)/launch/eurobot_beacon.launch">
            <arg name="robot_name" value="robot_1"/>
        </include>
    </group>

    
</launch>
